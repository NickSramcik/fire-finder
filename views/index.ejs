  </div> -->
  
  <script src="/js/index.js"></script>

  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDEP4Fpje8rlC-Z1aTMRMCuQ9FcEpXQMrU&callback=initMap"
    defer
  ></script>
</body>
</html>