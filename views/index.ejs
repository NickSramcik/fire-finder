<%- include('partials/header') -%>

  <div class="hero min-h-screen bg-base-200 text-secondary">
    <div class="hero-content flex-col lg:flex-row-reverse">
      <div id="map" class="max-w-lg rounded-lg shadow-2xl text-base-100"></div>
      <div>
        <h1 class="text-5xl font-bold min-w-lg mb-3">Fire Finder</h1>
        <p class="py-3">Your one-stop location to find wildfires in your area. Submit the coordinates for incidents, and they will display on the map.</p>
        <p class="pb-3">Red dots represent hotspots from NASA's infrared data, which is updated every 24 hours.</p>
        
        <div class="my-5">
          <h2 class="text-2xl font-bold min-w-max mb-1">Add a Fire</h2>
          <form action="/fire/createFire" enctype="multipart/form-data" method="POST">
            <div>
              <label class="label">
                <span class="label-text">Incident Name</span>
              </label>
              <input type="text" placeholder="Monument Fire" class="input input-bordered w-full max-w-xs" id="fireName" name="fireName">            
            </div>
            <div>
              <label class="label">
                <span class="label-text">Latitude</span>
              </label>
              <input type="text" placeholder="41.819" class="input input-bordered w-full max-w-xs" id="latitude" name="latitude">
            </div>
            <div class="mb-3">
              <label class="label">
                <span class="label-text">Longitude</span>
              </label>
              <input type="text" placeholder="-122.895" class="input input-bordered w-full max-w-xs" id="longitude" name="longitude">
            </div>
            <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>

<%- include('partials/footer') -%>

</body>
</html>
  
