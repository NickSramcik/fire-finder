<%- include('partials/header') -%>

<!-- Heading -->
<div class="hero bg-base-200 mb-12">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-5xl font-bold">Fire Feed</h1>
    </div>
  </div>
</div>

<!-- Feed Table -->
<div class="overflow-x-auto mb-16">
  <table class="table table-compact w-full">
    <thead>
      <tr>
        <th></th> 
        <th>Name</th> 
        <th>Latitude</th> 
        <th>Longitude</th> 
        <th>Date Added</th> 
        <!-- <th>Added By</th>  -->
        <!-- <th>% Contained</th> -->
      </tr>
    </thead> 
    <tbody>
      <% for(var i=0; i<fires.length; i++) {%>
        <tr>
          <th><%= i + 1 %></th>
          <td><a class="no-underline" href="/fire/details/<%= fires[i]._id %>"><%= fires[i].fireName %></a></td>
          <td><%= fires[i].latitude %></td>
          <td><%= fires[i].longitude %></td>
          <td><%= fires[i].createdAt %></td>
        </tr>
      <% } %>
    </tbody> 
    <tfoot>
      <tr>
        <th></th> 
        <th>Name</th> 
        <th>Latitude</th> 
        <th>Longitude</th> 
        <th>Date Added</th> 
        <!-- <th>Added By</th>  -->
        <!-- <th>% Contained</th> -->
      </tr>
    </tfoot>
  </table>
</div>
 
